{
    "name": "xavierau/laravel-qr-payment",
    "description": "A comprehensive Laravel package for QR code-based payment processing with real-time notifications, supporting both customer and merchant workflows",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/xavierau/laravel-qr-payment",
    "authors": [
        {
            "name": "Xavier Au",
            "email": "xavier.au@gmail.com",
            "homepage": "https://github.com/xavierau"
        }
    ],
    "support": {
        "issues": "https://github.com/xavierau/laravel-qr-payment/issues",
        "source": "https://github.com/xavierau/laravel-qr-payment"
    },
    "keywords": [
        "laravel",
        "payment",
        "qr-code",
        "mobile-payment",
        "transaction",
        "real-time",
        "websocket",
        "merchant",
        "customer",
        "package"
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/database": "^10.0|^11.0",
        "illuminate/validation": "^10.0|^11.0",
        "illuminate/broadcasting": "^10.0|^11.0",
        "bacon/bacon-qr-code": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^8.0|^9.0",
        "mockery/mockery": "^1.5",
        "laravel/pint": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "XavierAu\\LaravelQrPayment\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "XavierAu\\LaravelQrPayment\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "XavierAu\\LaravelQrPayment\\LaravelQrPaymentServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "lint": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}